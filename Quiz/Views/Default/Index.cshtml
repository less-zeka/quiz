@model Quiz.Models.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="playerList" class="col-xs-12">???</></div>
    <div id="readyButton" class="col-xs-12 btn btn-success">Nächste Frage</div>
</div>
<div id="nextQuestion" class="row hidden">
    @Html.Partial("_Question")
</div>

<div id="playerAnswer"></div>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.1.2.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    @* ReSharper disable once Html.PathError signal r not recognized *@
    <script src="~/signalr/hubs"></script>
    <script src="~/js/index.js"></script>
}